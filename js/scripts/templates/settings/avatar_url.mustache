<div id="main-content">
  <header>
    <h3 id="fxa-settings-sub-header"><a href="/settings">{{#t}}Manage account{{/t}}</a></h3>
    <h1 id="fxa-account-picture-header">{{#t}}Account picture{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <div class="avatar-wrapper">
      {{#avatar}}
        <img src="{{ avatar }}" id="avatar"/>
      {{/avatar}}
      {{^avatar}}
        <img class="default" />
      {{/avatar}}
    </div>
    <form novalidate>
      <div class="input-row">
        <input type="text" class="url" placeholder="{{#t}}Paste image URL{{/t}}" value="{{ url }}" {{^url}}autofocus{{/url}}>
      </div>

      <div class="button-row">
        <button id="submit-btn" type="submit" class="disabled">{{#t}}Next{{/t}}</button>
      </div>
    </form>
    <ul class="links">
      <li><a href="/settings/avatar/change">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
</div>
