<div id="main-content">
  <header>
    <h3 id="fxa-settings-sub-header"><a href="/settings">{{#t}}Manage account{{/t}}</a></h3>
    <h1 id="fxa-account-picture-header">{{#t}}Account picture{{/t}}</h1>
  </header>

  <section>
    <p class="avatar-wrapper">
      {{#avatar}}
        <img src="{{ avatar }}" />
      {{/avatar}}
      {{^avatar}}
        <img class="default"/>
      {{/avatar}}
      <video id="video" class="hidden"></video>
    </p>

    <div class="error"></div>
    <div class="success"></div>

    <canvas id="canvas"></canvas>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" class="disabled">{{#t}}Take picture{{/t}}</button>
      </div>
    </form>

    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
</div>
