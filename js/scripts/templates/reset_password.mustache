<div id="main-content">
  <header>
    <h1 id="fxa-reset-password-header">{{#t}}Reset password{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <form novalidate>
      <p>{{#t}}Enter your email to reset&nbsp;the account password.{{/t}}</p>

      <div class="input-row">
        <input name="email" type="email" class="email" placeholder="{{#t}}Email{{/t}}" value="{{ email }}" autofocus required>
      </div>

      <p class="reset-warning">
        {{#t}}For security reasons, resetting your password will erase your Sync data from our servers. A new Sync backup will be created from your local browsing data.{{/t}}
      </p>

      <div class="button-row">
        <button id="submit-btn" type="submit" class="disabled">{{#t}}Next{{/t}}</button>
      </div>
    </form>

    {{#backEnabled}}
      <div class="links">
        <a id="back" href="/signin">{{#t}}Back{{/t}}</a>
      </div>
    {{/backEnabled}}
  </section>
</div>
